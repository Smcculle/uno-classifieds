<li class="span3" id="picture_<%= pic.id %>">
  <div class="thumbnail">
    <%= image_tag pic.image.url %>
    <div class="caption">
      <p style="text-align: center;">
        <%= link_to 'Delete picture', { controller: :pictures, action: :destroy, id: pic.id},
                      method: :delete, data: { confirm: 'Delete picture?' }, class: 'btn btn-primary'%>
      </p>
    </div>
  </div>
</li>